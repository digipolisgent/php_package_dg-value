{
    "name": "digipolisgent/value",
    "description": "Package containing the interfaces and abstract implementations to support the usage of Value objects in packages and projects.",
    "keywords": ["digipolisgent", "value object"],
    "homepage": "https://github.com/digipolisgent/php_package_dg-value",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Decuyper",
            "email": "peter.decuyper@digipolis.gent"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.* || ^6",
        "squizlabs/php_codesniffer": "^2.3",
        "phpmd/phpmd" : "@stable"
    },
    "autoload": {
        "psr-4": {
            "DigipolisGent\\Value\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DigipolisGent\\Test\\Value\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1-dev"
        }
    },
    "scripts": {
        "post-update-cmd": [
            ".githooks/init.sh"
        ],
        "post-install-cmd": [
            ".githooks/init.sh"
        ],
        "test": [
            "vendor/bin/phpunit"
        ],
        "check-style": [
            "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
        ]
    }
}
